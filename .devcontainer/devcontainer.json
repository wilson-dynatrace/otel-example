{
	"name": "OpenTelemetry Workshop Environment",
	"dockerFile": "Dockerfile",

	// do not change these if you want Docker in Docker support
	"runArgs": ["--init", "--privileged", "--network=host"],
	"mounts": [ "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind" ],
	"overrideCommand": false,

	// some base images require a specific user name
	"remoteUser": "vscode",

	// Install extensions
	"customizations": {
		"vscode": {	
			// Set container specific settings
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh"
			},			
			"extensions": []
		}
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		//3000, 16686, 9090
	],

	// add labels
	"portsAttributes": {
		//"80": { "label": "easyTrade" }
	},

	"hostRequirements": {
		"cpus": 2
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "chmod +x .devcontainer/post-create.sh && .devcontainer/post-create.sh",

	// Add recommended secrets
	"secrets": {
		"DT_TENANT_URL": {
			"description": "SaaS tenant URL, e.g. https://abc12345.apps.dynatrace.com"
	 	},
		"DT_API_TOKEN": {
			"description": "Dynatrace API token with these permissions: `logs.ingest`, `events.ingest`, `metrics.ingest`, `openTelemetry.ingest`"
	 	}
	}
	
}
